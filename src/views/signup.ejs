<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/src/views/style.css">
    <title>Sign Up</title>
</head>

<body>

    <center>

        <h1>Sign Up</h1>

        <form id="signupForm">
            <div class="main">
                <div class="formgroup">
                    <label class="label" for="firstName">First Name:</label>
                    <input class="input_box" type="text" id="firstName" name="first_name" required>
                </div>

                <div class="formgroup">
                    <label class="label" for="lastName">Last Name:</label>
                    <input class="input_box" type="text" id="lastName" name="last_name" required>
                </div>

                <div class="formgroup">
                    <label class="label" for="mobile">Mobile:</label>
                    <input class="input_box" type="tel" id="mobile" name="mobile" required>
                </div>

                <div class="formgroup">
                    <label class="label" for="email">Email:</label>
                    <input class="input_box" type="email" id="email" name="email" required>
                </div>

                <div class="formgroup">
                    <label class="label" for="password">Password:</label>
                    <input class="input_box" type="password" id="password" name="password" required>
                </div>

                <div class="formgroup">
                    <label class="label" for="address">Address:</label>
                    <input class="input_box" type="text" id="address" name="address" required>
                </div>

                <div class="cta">
                    <button type="button" class="cta_btn" onclick="submitForm()">Sign Up</button>
                    <a class="cta_btn" href="/login"><button type="button">Login</button></a>
                </div>
            </div>

        </form>
    </center>

    <script>
        function submitForm() {
            var baseUrl = window.location.origin;

            var formData = {
                first_name: document.getElementById('firstName').value,
                last_name: document.getElementById('lastName').value,
                mobile: document.getElementById('mobile').value,
                email: document.getElementById('email').value,
                password: document.getElementById('password').value,
                address: document.getElementById('address').value
            };
            if (formData.first_name !== "" && formData.last_name !== "" && formData.mobile !== "" && formData.address !== "" && formData.password !== "") {
                fetch(`${baseUrl}/user-register`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                })
                    .then(response => response.json())
                    .then(data => {
                        console.log(data);
                        alert(data.message)
                        window.location.href = '/login';
                    })
                    .catch(error => console.error('Error:', error));
            } else {
                alert('All fields are required')
            }
        }
    </script>
</body>

</html>